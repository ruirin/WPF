                                DataTooltip="{x:Null}"
                                Height="200" />
            <lvc:CartesianChart Name="liveChart6"
                                Zoom="Xy"
                                DisableAnimations="True"
                                Hoverable="False"
                                DataTooltip="{x:Null}"
                                Height="200" />
            <lvc:CartesianChart Name="liveChart7"
                                Zoom="Xy"
                                DisableAnimations="True"
                                Hoverable="False"
                                DataTooltip="{x:Null}"
                                Height="200" />
            <lvc:CartesianChart Name="liveChart8"
                                Zoom="Xy"
                                DisableAnimations="True"
                                Hoverable="False"
                                DataTooltip="{x:Null}"
                                Height="200" />
        </StackPanel>
    </ScrollViewer>
</Window>
